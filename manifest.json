{

  "manifest_version": 2,
  "name": "Borderify",
  "version": "1.0",
  "description": "Agrega un borde rojo a todas las p√°ginas web de mozilla.org.",
  "icons": {
    "48": "icons/border-48.png"
  },
  "permissions": [
    "tabs",
    "clipboardWrite",
    "storage",
    "contextMenus",
    "nativeMessaging",
    "webRequest",
    "notifications",
    "<all_urls>"
  ],
  
  "browser_action":{
  	"default_icon": {
    	"48": "icons/border-48.png"
  	},
  	"default_title": "Whereami?",
  	"default_popup":"popup/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>",
        "https://pelisplushd.net/*",
        "https://www.youtube.com/*"
      ],

      "js": [
        "libs/jquery-3.6.0.js",
        "libs/jquery.js",
        "borderify.js"
      ]
    }
  ],
  "background": {
   "scripts": ["background.js", "back2.js"]
  }

}